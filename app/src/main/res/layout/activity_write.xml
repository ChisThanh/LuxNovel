<?xml version="1.0" encoding="utf-8"?>

<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lDrawer_aWrite_Drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="Activity.ActivityWrite"
    tools:openDrawer="start">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/uToolbar_aWrite_Toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/colorPrimary"
                android:minHeight="?attr/actionBarSize"
                android:theme="?attr/actionBarTheme"
                app:navigationIcon="@drawable/menu"
                app:title="@string/write" />

        </com.google.android.material.appbar.AppBarLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/uText_aWrite_Adminname"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:autofillHints=""
                android:background="@drawable/border"
                android:drawableStart="@drawable/username"
                android:drawablePadding="10dp"
                android:drawableTint="@color/gray"
                android:ems="10"
                android:text="huynhvuonghuukhanhb6@gmail.com" />

            <EditText
                android:id="@+id/uText_aWrite_Username"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:autofillHints=""

                android:background="@drawable/border"
                android:drawableStart="@drawable/username"
                android:drawablePadding="10dp"

                android:drawableTint="@color/gray"
                android:ems="10"

                android:enabled="false"
                android:hint="@string/username"
                android:inputType="text"
                android:textSize="20sp"

                tools:ignore="LabelFor,VisualLintTextFieldSize,TextContrastCheck,TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/vText_aWrite_UsernameAnnotation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:text="@string/username_annotation"
                android:textColor="@color/error_red"
                android:textSize="12sp"
                tools:ignore="TextContrastCheck" />

            <EditText
                android:id="@+id/uText_aWrite_Authorname"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"

                android:autofillHints=""
                android:background="@drawable/border"
                android:drawableStart="@drawable/name"
                android:drawableEnd="@drawable/visibility"

                android:drawablePadding="10dp"
                android:drawableTint="@color/gray"

                android:ems="10"
                android:hint="@string/name"
                android:inputType="text"
                android:textSize="20sp"

                tools:ignore="LabelFor,VisualLintTextFieldSize,TextContrastCheck,TouchTargetSizeCheck" />
            <!--            <TextView-->
            <!--                android:id="@+id/vText_aWrite_AuthornameAnnotation"-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:layout_marginTop="5dp"-->
            <!--                android:layout_marginStart="10dp"-->
            <!--                android:layout_marginEnd="10dp"-->
            <!--                android:layout_gravity="end"-->
            <!--                android:textSize="12sp"-->
            <!--                android:textColor="@color/error_red"-->
            <!--                android:text="@string/password_annotation"-->
            <!--                tools:ignore="TextContrastCheck" />-->

            <EditText
                android:id="@+id/uText_aWrite_Email"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"

                android:autofillHints=""
                android:background="@drawable/border"
                android:drawableStart="@drawable/email"

                android:drawablePadding="10dp"
                android:drawableTint="@color/gray"

                android:ems="10"
                android:hint="@string/email"
                android:inputType="textEmailAddress"
                android:textSize="20sp"

                tools:ignore="LabelFor,VisualLintTextFieldSize,TextContrastCheck,TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/vText_aWrite_EmailAnnotation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:text="@string/email_annotation"
                android:textColor="@color/error_red"
                android:textSize="12sp"
                tools:ignore="TextContrastCheck" />

            <EditText
                android:id="@+id/uText_aWrite_Novelname"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"

                android:autofillHints=""
                android:background="@drawable/border"
                android:drawableStart="@drawable/baseline_book_24"

                android:drawablePadding="10dp"
                android:drawableTint="@color/gray"

                android:ems="10"
                android:hint="Novel name"
                android:inputType="text"
                android:textSize="20sp"

                tools:ignore="LabelFor,VisualLintTextFieldSize,TextContrastCheck,TouchTargetSizeCheck" />
            <!--            <TextView-->
            <!--                android:id="@+id/vText_aAccount_NameAnnotation"-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:layout_marginTop="5dp"-->
            <!--                android:layout_marginStart="10dp"-->
            <!--                android:layout_marginEnd="10dp"-->
            <!--                android:layout_gravity="end"-->
            <!--                android:textSize="12sp"-->
            <!--                android:textColor="@color/error_red"-->
            <!--                android:text="Name Annotation"-->
            <!--                tools:ignore="TextContrastCheck" />-->
            <EditText
                android:id="@+id/uText_aWrite_Chapter"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"

                android:autofillHints=""
                android:background="@drawable/border"
                android:drawableStart="@drawable/baseline_book_24"

                android:drawablePadding="10dp"
                android:drawableTint="@color/gray"

                android:ems="10"
                android:hint="Chapter name"
                android:inputType="text"
                android:textSize="20sp"

                tools:ignore="LabelFor,VisualLintTextFieldSize,TextContrastCheck,TouchTargetSizeCheck" />
            <!--            <TextView-->
            <!--                android:id="@+id/vText_aAccount_DobAnnotation"-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:layout_marginTop="5dp"-->
            <!--                android:layout_marginStart="10dp"-->
            <!--                android:layout_marginEnd="10dp"-->
            <!--                android:layout_gravity="end"-->
            <!--                android:textSize="12sp"-->
            <!--                android:textColor="@color/error_red"-->
            <!--                android:text="Dob annotation"-->
            <!--                tools:ignore="TextContrastCheck" />-->
            <EditText
                android:id="@+id/uText_aWrite_Content"

                android:layout_width="match_parent"
                android:layout_height="78dp"
                android:layout_marginTop="10dp"

                android:autofillHints=""
                android:background="@drawable/border"
                android:drawableStart="@drawable/baseline_book_24"

                android:drawablePadding="10dp"
                android:drawableTint="@color/gray"
                android:ems="10"
                android:hint="Content"
                android:inputType="text"
                android:textSize="20sp"

                tools:ignore="LabelFor,VisualLintTextFieldSize,TextContrastCheck,TouchTargetSizeCheck" />
            <!--            <TextView-->
            <!--                android:id="@+id/vText_aAccount_GenderAnnotation"-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:layout_marginTop="5dp"-->
            <!--                android:layout_marginStart="10dp"-->
            <!--                android:layout_marginEnd="10dp"-->
            <!--                android:layout_gravity="end"-->
            <!--                android:textSize="12sp"-->
            <!--                android:textColor="@color/error_red"-->
            <!--                android:text="gender annotation"-->
            <!--                tools:ignore="TextContrastCheck" />-->
            <Button
                android:id="@+id/uButton_aWrite_Send"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/border"
                android:text="@string/send"
                android:textColor="@color/black"
                android:textSize="25sp"
                tools:ignore="VisualLintButtonSize" />


        </LinearLayout>

    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/vNavigation_aWrite_Navigation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        android:scrollbars="vertical"
        app:headerLayout="@layout/header_header"
        app:itemIconTint="@color/black"
        app:itemTextColor="@color/black"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:menu="@menu/menu_drawer" />

</androidx.drawerlayout.widget.DrawerLayout>